<div class="container">
	<div class="jumbotron">
		<img src="../public/assets/img/img.jpg">
		<h1>Eat-Da_burger!!!!</h1>
	</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
					{{#each burgers}}
					{{#unless this.devaoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update{{this.Id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lrg" type="submit">MAKE-DA-BURGER!!</button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4 col-md-offset-2">
				<div class="panel panel-default">
					<ul class="list-group">
						{{#each burgers}}
						{{#if this.devoured}}
						<li class="list-group-item">
							<p class="lead">{{this.burger_name}} </p>
						</li>
						{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>

		<div class="col-md-10 col-md-offset-1">
			<p class="lead">Make a Burger!!</p>

			<form class="create-update-form" action="burgers/create" method="POST">

				<div class="form-group">
					<textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
				</div>

				<button class="btn btn-default btn-lg" type="submit">Add Burger!!</button>
			</form>
		</div>
	</div>